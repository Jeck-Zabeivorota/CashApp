<UserControl x:Class="CashApp.UIElements.DateSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="clr-namespace:CashApp.UIElements"
             mc:Ignorable="d" 
             d:DesignHeight="25">
    
    <StackPanel Orientation="Horizontal">
        
        <!--  DAY  -->
        <ui:NumberField x:Name="XDay" Minimum="1" Width="40"/>
        
        <!--  MONTH  -->
        <ui:NumberField x:Name="XMonth" Minimum="1" Maximum="12" Width="40" Margin="10,0"/>

        <!--  YEAR  -->
        <ui:NumberField x:Name="XYear" Minimum="1" Maximum="9999" Width="60"/>

    </StackPanel>
    
</UserControl>
